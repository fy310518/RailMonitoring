<resources>

    <style name="railTheme" parent="BaseAppTheme">
        <item name="android:listDivider">@drawable/app_divider</item>
        <!--<item name="android:windowBackground">@drawable/app_loading</item>-->
    </style>

    <!-- 启动界面主题 -->
    <style name="startUpTheme" parent="BaseAppTheme">
        <item name="android:windowBackground">@drawable/app_loading</item>
        <item name="android:windowFullscreen">false</item> <!-- 全屏 -->
    </style>

    <!-- 统一底部按钮样式 -->
    <style name="unifyBottomBtn">
        <item name="android:layout_marginLeft">@dimen/dp_50</item>
        <item name="android:layout_marginRight">@dimen/dp_50</item>
        <item name="android:background">@drawable/ripple_btn_rect_arc</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_small</item>
    </style>



    <!-- 录入数据 fragment 头部标签字体样式 -->
    <style name="inputFragmentHead">
        <item name="android:layout_width">@dimen/dp_80</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_small</item>
    </style>

    <!-- 录入数据 fragment 头部数据字体样式 -->
    <style name="inputFragmentHeadContent">
        <item name="android:layout_width">@dimen/dp_60</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:background">@drawable/ripple_rect</item>
    </style>

    <!-- 个人中心-->
    <style name="main_my_more">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:background">@drawable/ripple_rect</item>
        <item name="android:textColor">@color/txtSecondColor</item>
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
